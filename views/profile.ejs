<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
  <title>Student Profile</title>
</head>

<body>
    <%- include ('navbar'); %>
    <%- include ('profilenav') %>

    <div>
    <main class="form-signin d-flex w-100 mt-3 mb-4 text-center justify-content-center">
        <div class="card mx-1 overflow-hidden" style="width: 50rem; background-color: rgb(250, 250, 250);">
            <div class="overflow-hidden" style="height: 200px;">
                <input type="file" class="position-absolute opacity-0" style="height: 12%; width: 100%;" disabled>
                <img src="/img/sourceimg/backimg.jpg" class="img-fluid border rounded-3">
            </div>
            <div class="card-body">
                <form id="personalform" style="margin-top: -130px;" enctype="multipart/form-data">
                    <div class="rounded-2 py-2" style="height: 220px;">
                        <img style="border-radius: 100%;" class="border p-1 bg-white" src="/img/profileimg/<%= msg.image %>" height="170" width="170">
                        <input type="file" id="profileimginput" class="position-absolute opacity-0 bg-danger py-5" name="image" style="margin: 30px 0px 0px -180px;" disabled required>
                        <p id="imageinstruction" class="text-secondary"></p>
                        <h3><%= msg.username %></h3>
                    </div>
                    <div class="form-floating">
                        <input disabled type="text" class="form-control mt-3" id="floatingname" placeholder="adam_123" name="name" value="<%= msg.name %>" required>
                        <label for="floatingstuusername">Name</label>
                    </div>
                    <div class="form-floating">
                        <input disabled type="email" class="form-control mt-3" id="floatingemail" placeholder="adam_123" name="email" value="<%= msg.email %>" required>
                        <label for="floatingstuusername">Email</label>
                    </div>
                    <div class="form-floating">
                        <input disabled type="number" class="form-control mt-3" id="floatingmobile" placeholder="adam_123" name="mobile" value="<%= msg.mobile %>" required>
                        <label for="floatingstuusername">Mobile No</label>
                    </div>
                    <div class="d-flex">
                        <div class="form-floating mt-3" style="width: 47%; margin-right: 1%;">
                            <input disabled type="date" class="form-control" id="floatingbirthdate" placeholder="adam_123" name="birthdate" value="<%= msg.birthdate %>" required>
                            <label for="floatingstuusername">Birth Date</label>
                        </div>
                        <div class="form-floating mt-3" style="width: 52%;">
                            <input disabled type="text" class="form-control" id="floatingjoiningdate" placeholder="adam_123" name="joiningdate" value="<%= msg.joining %>" required>
                            <label for="floatingstuusername">Joining Date</label>
                        </div>
                        </div>
                    <button id="personalbtn" class="btn btn-primary mb-2 w-100 py-2 mt-4" type="button">Update Information</button>
                    <a href="logout" class="text-decoration-none fs-5 text-danger">Logout</a>
                </form>
            </div>
        </div>
        </main>

        
        <!-- redidential information -->
        <main class="form-signin d-flex w-100 mt-3 mb-4 text-center justify-content-center">
        <div class="card mx-1 overflow-hidden pt-5" style="width: 50rem; background-color: rgb(250, 250, 250);">
            <div class="card-body">
                <form id="residentialform" style="margin-top: -110px;">
                    <br>
                    <h5 id="head1" class="text-secondary mt-5">Residential Information</h5>
                    
                    <div class="form-floating">
                        <textarea class="form-control mt-3" disabled style="height: 130px; resize: none;" id="floatingaddress" placeholder="adam_123" name="address"><%= msg2.address %></textarea>
                        <label for="floatingaddress">Address</label>
                    </div>
                    <div class="d-flex">
                    <div class="form-floating mt-3" style="width: 54%; margin-right: 2%;">
                        <input disabled type="number" class="form-control" id="floatingpincode" placeholder="adam_123" name="pincode" value="<%= msg2.pincode %>">
                        <label for="floatingpincode">PIN Code</label>
                    </div>
                    <div class="form-floating mt-3" style="width: 44%;">
                        <input disabled type="text" class="form-control" id="floatingcity" placeholder="adam_123" name="city" value="<%= msg2.city %>">
                        <label for="floatingcity">City</label>
                    </div>
                    </div>
                    <div class="d-flex">
                        <div class="form-floating mt-3" style="width: 41%; margin-right: 2%;">
                            <input disabled type="text" class="form-control" id="floatingstate" placeholder="adam_123" name="state" value="<%= msg2.state %>">
                            <label for="floatingstate">State</label>
                        </div>
                        <div class="form-floating mt-3" style="width: 57%;">
                            <input disabled type="text" class="form-control" id="floatingcountry" placeholder="adam_123" name="country" value="<%= msg2.country %>">
                            <label for="floatingcountry">Country</label>
                        </div>
                        </div>
                    <button id="residentialbtn" class="btn btn-primary mb-2 w-100 py-2 mt-4" type="button">Update Information</button>
                </form>
            </div>
        </div>
        </main>


        <!-- professional information -->
        <main class="form-signin d-flex w-100 mt-3 mb-4 text-center justify-content-center">
        <div class="card mx-1 overflow-hidden pt-5" style="width: 50rem; background-color: rgb(250, 250, 250);">
            <div class="card-body">
                <form id="professionform" style="margin-top: -110px;">
                    <br>
                        <h5 class="text-secondary mt-5">Professional Information</h5>

                        <div class="form-floating">
                            <input disabled type="text" class="form-control mt-3" id="floatingtype" placeholder="adam_123" name="type" value="<%= msg3.type %>">
                            <label for="floatingtype">Profession Type</label>
                        </div>
                        <div class="form-floating">
                            <input disabled type="text" class="form-control mt-3" id="floatingqualification" placeholder="adam_123" name="qualification" value="<%= msg3.qualification %>">
                            <label for="floatingqualification">Qualifications</label>
                        </div>
                        <div class="form-floating">
                            <input disabled type="text" class="form-control mt-3" id="floatingscwname" placeholder="adam_123" name="scwname" value="<%= msg3.scwname %>">
                            <label for="floatingscwname">School, College or Workplace Name</label>
                        </div>
                        <div class="form-floating">
                            <input disabled type="text" class="form-control mt-3" id="floatingskill" placeholder="adam_123" name="skill" value="<%= msg3.skill %>">
                            <label for="floatingskill">Skills</label>
                        </div>
                        <div class="form-floating">
                            <input disabled type="text" class="form-control mt-3" id="floatinglanguage" placeholder="adam_123" name="language" value="<%= msg3.language %>">
                            <label for="floatinglanguage">Prefered Human Language's</label>
                        </div>
                    <button id="professionbtn" class="btn btn-primary mb-2 w-100 py-2 mt-4" type="button">Update Information</button>
                </form>
            </div>
        </div>
    </main>
    </div>

    <script src="/script/profileinfo.js"></script>
    <script src="/script/profproject.js"></script>
    <script src="/script/navbar.js"></script>
</body>
</html>